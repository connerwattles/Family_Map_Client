<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/eventRelativeLayout"
    android:clickable="true">

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="10sp"
        android:src="@drawable/ic_baseline_location_on_24" />

    <LinearLayout
        android:id="@+id/eventItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/eventImage" >

        <TextView
            android:id="@+id/eventDetailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="Event Type: Locations (Year)"/>

        <TextView
            android:id="@+id/eventsPersonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="Person's Name"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/eventItemLayout"
        android:background="@android:color/background_dark" />


</RelativeLayout>