<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/personRelativeLayout"
    android:clickable="true">

    <ImageView
        android:id="@+id/personImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="10sp"
        android:src="@drawable/ic_baseline_android_24" />

    <LinearLayout
        android:id="@+id/personItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/personImage" >

        <TextView
            android:id="@+id/personNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="Person in Family's Name"/>

        <TextView
            android:id="@+id/personRelationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="Person's Relation"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/personItemLayout"
        android:background="@android:color/background_dark" />

</RelativeLayout>